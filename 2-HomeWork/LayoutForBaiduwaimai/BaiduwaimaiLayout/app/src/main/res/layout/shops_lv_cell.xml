<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shops_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="店铺标志" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/shops_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/shops_name">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/centerImageView"

                    android:layout_marginRight="20dp"
                    android:contentDescription="减"
                    android:src="@drawable/waimai_shoplist_item_icon_jian" />

                <ImageView
                    android:id="@+id/centerImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="end"
                    android:contentDescription="券"
                    android:src="@drawable/waimai_shoplist_item_icon_juan" />

                <ImageView
                    android:id="@+id/mian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/centerImageView"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="免"
                    android:src="@drawable/waimai_shoplist_item_icon_mian" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/evaluated_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="第1星"
                android:src="@drawable/businesslistings_list_icon_star_no" />

            <ImageView
                android:id="@+id/evaluated_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="第2星"
                android:src="@drawable/businesslistings_list_icon_star_no" />

            <ImageView
                android:id="@+id/evaluated_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="第3星"
                android:src="@drawable/businesslistings_list_icon_star_no" />

            <ImageView
                android:id="@+id/evaluated_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="第4星"
                android:src="@drawable/businesslistings_list_icon_star_no" />

            <ImageView
                android:id="@+id/evaluated_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="第5星"
                android:src="@drawable/businesslistings_list_icon_star_no" />

            <TextView
                android:id="@+id/shop_sold_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/shop_distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shop_extra_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>