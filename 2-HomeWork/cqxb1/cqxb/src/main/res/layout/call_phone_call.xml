<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cpc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:clickable="true" >

    <RelativeLayout
        android:id="@+id/layoutDialer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:visibility="visible" >

        <CheckBox
            android:id="@+id/buttonPan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/tab_dialer_ups"
            android:button="@null"  
            android:checked="true"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/buttonDialer"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/buttonContacts"
            android:layout_toRightOf="@id/buttonPan"
            android:background="@drawable/btn_greenlight"
            android:clickable="true"
            android:onClick="callPhone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dianhua" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="呼叫"
                    android:textColor="#fff"
                    android:textSize="20sp" 
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>

        <ToggleButton
            android:id="@+id/buttonContacts"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_cont"
            android:textOff=""
            android:textOn="" 
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>