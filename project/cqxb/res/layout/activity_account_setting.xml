<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#eeeeee">

    <LinearLayout
        android:id="@+id/updatePwd"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="40dip"
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/mima" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/callSetting"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="15dip"
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/boda" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拨打设置"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/callinSetting"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="15dip"
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shezhi" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="呼入设置"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/checkUpdate"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="15dip"
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/checknew" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查更新"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/exit"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:background="@color/white"
        android:layout_marginTop="15dip"
        android:clickable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/tuichu" 
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="切换帐号"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_next" 
            android:layout_gravity="center"
            android:layout_marginRight="20dip"/>
    </LinearLayout>

</LinearLayout>